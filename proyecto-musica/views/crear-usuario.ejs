<!doctype html >
<html lang="es">
<head>

    <meta charset="utf-8">
    <title>Crear Usuario</title>
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/CSS/animate.css">

</head>
<body>

<% const estaCreando = typeof usuario === "undefined"%>
<% const existeMensaje = typeof mensaje !== "undefined"%>

<% if(existeMensaje){ %>
    <div class="<%= clase %>" role="alert">
            <span class="font-weight-bold">
                MENSAJE
            </span> : <%= mensaje %>
    </div>
<% } %>


<h1 align="center"> <%= estaCreando ? 'Registrar':'Actualizar' %> Usuario</h1>
<p align="center"><%= estaCreando ? 'Registre':'Actualice' %> un Usuario</p>


<div class="container">

    <form action="crear-usuario" method="POST">

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Nickname</span>
            </div>
            <label for="username"></label>
            <input id="username" type="text" name="username" value="" required
                   class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>

        <br>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Password</span>
            </div>
            <label for="password"></label>
            <input id="password"
                   type="password"
                   name="password"
                   value="" required
                   class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <br>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
            </div>
            <label for="nombre"></label>
            <input id="nombre"
                   type="text"
                   name="nombre"
                   value="" required
                   class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <br>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Apellido</span>
            </div>
            <label for="apellido"></label>
            <input id="apellido"
                   type="text"
                   name="apellido"
                   value="" required
                   class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <br>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Correo</span>
            </div>
            <label for="correo"></label>
            <input id="correo"
                   type="email"
                   name="correo"
                   value="" required
                   class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Foto Usuario</span>
            </div>
            <label for="fotoUsuario"></label>
            <input id="fotoUsuario"
                   type="text"
                   name="fotoUsuario"
                   value="" required
                   class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>

        <br>
        <button type="submit" class="btn btn-info"><%= estaCreando ? 'Crear' : 'Actualizar' %> usuario</button>

    </form>
    <br>

    <a href="/home">
        <button type="button" class="btn btn-info">Regresar</button>
    </a>

</div>

<script src="/js/jquery.js"></script>
<script src="/js/popper.js"></script>


<script src="/bootstrap/js/bootstrap.js"></script>

</body>
</html>
